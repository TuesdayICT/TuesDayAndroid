<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyConfirmedActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/logo_letter"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/flower_delivered"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="20dp">
        <TextView
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="주문이 성공적으로 완료되었습니다"
            android:fontFamily="@font/pretendard_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="빠르게 배송지로 가져다드릴게요"
            android:fontFamily="@font/pretendard_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:id="@+id/btn_goto_home"
            android:text="홈으로 돌아가기"
            app:icon="@drawable/icon_home"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>