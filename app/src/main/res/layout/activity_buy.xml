<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyActivity">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:layout_height="40dp">
            <ImageView
                android:scaleType="fitEnd"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:src="@drawable/tuesday_image"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:layout_weight="5"
                android:src="@drawable/tuesday_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="left|center"
                android:textSize="25dp"
                android:text="userName 님, \n특별한 화요일 되세요"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_marginHorizontal="80dp"
                android:src="@drawable/flower_combined"
                android:adjustViewBounds="true"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:text="꽃다발과 보낼 문구 입력"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <EditText
                android:layout_marginHorizontal="40dp"
                android:gravity="center"
                android:hint="작은 카드로 만들어 보내드려요"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:text="배송지 입력"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <EditText
                android:layout_marginHorizontal="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:text="300 won 간편결제하기"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="네이버"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="네이버"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="네이버"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>